mysql> SELECT Name
    -> FROM Students
    -> WHERE StudentID = (
    ->   SELECT StudentID
    ->   FROM Marks
    ->   GROUP BY StudentID
    ->   ORDER BY AVG(Marks) DESC
    ->   LIMIT 1
    -> );
