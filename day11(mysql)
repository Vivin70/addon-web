mysql> SELECT d.DepartmentName, s.Name AS StudentName, m.Subject, m.Marks
    -> FROM Departments d
    -> JOIN Students s ON d.DepartmentID = s.DepartmentID
    -> JOIN Marks m ON s.StudentID = m.StudentID
    -> ORDER BY d.DepartmentName, s.Name;
